@model TaskApp2.Models.Task

@{
    ViewData["Title"] = "Edit";
}
<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

 <script type="text/javascript">
 $(function(){
     console.log("ready!");
     DivHide()
 });

</script>

<h2>Edit</h2>

<button id="btnHide" onclick="DivHide()">Hide</button>
<button id="btnShow" onclick="DivShow()">Show</button>


<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc" class="control-label"></label>
                <input asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Complete" /> @Html.DisplayNameFor(model => model.Complete)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <select asp-for="RepeatFreq" asp-items="Html.GetEnumSelectList<RepeatFrequencyEnum>()"></select>
            </div>
            <div id="divDayOfWeek" class="form-group">
                <select asp-for="SelectedDay" asp-items="Html.GetEnumSelectList<DayOfWeek>()"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

 <script type="text/javascript">
 function DivHide(){
       $("#divDayOfWeek").hide(100);
 }

 function DivShow(){
      $("#divDayOfWeek").show();
 }
  </script>
