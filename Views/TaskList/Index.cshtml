@model IEnumerable<TaskApp2.Models.TaskInstance>

@{
    ViewData["Title"] = "Task Instance Index";
}

<h2>Today's Task List</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Desc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TaskDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complete)
                </th>                

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskDate)
            </td>   
            <td>
                @Html.DisplayFor(modelItem => item.Complete)
            </td>                     
            <td>
                <a asp-action="SetComplete" asp-route-id="@item.ID">Mark As Complete</a> |
                <a asp-action="Snooze" asp-route-id="@item.ID">Do it Tomorrow</a>
            </td>
        </tr>
}
    </tbody>
</table>
